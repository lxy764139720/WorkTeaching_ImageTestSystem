<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a5398"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cloths"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_weight="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="推荐描述"
        android:textColor="#fff"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_weight="3"
        android:lineSpacingExtra="8dp"
        android:textColor="#000"
        android:textSize="30sp"
        tools:text="@string/des_man_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="配件推荐"
        android:textColor="#fff"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/briefcase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/briefcase"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <ImageView
            android:id="@+id/necktie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/necktie"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <ImageView
            android:id="@+id/wristwatch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/wristwatch"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/shoes"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>